{
  "name": "functions",
  "version": "0.3.2",
  "description": "FireGen Firebase Extension - AI media generation via pure REST API (18 Vertex AI models)",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "upload": "firebase ext:dev:upload huan/firegen",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:analyzer": "vitest run assisted-mode",
    "test:analyzer:watch": "vitest assisted-mode",
    "test:video": "vitest run assisted-mode -- -t \"video:\"",
    "test:image": "vitest run assisted-mode -- -t \"image:\"",
    "test:audio": "vitest run assisted-mode -- -t \"audio:\"",
    "test:text": "vitest run assisted-mode -- -t \"text:\""
  },
  "main": "lib/index.js",
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.2.0",
    "google-auth-library": "^10.4.2",
    "mime": "^4.1.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "tsx": "^4.20.6"
  },
  "private": true
}
